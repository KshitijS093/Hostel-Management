<body>
  <div class="container">
    <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
      <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
        <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
        <!-- <span class="fs-4">BMSCE ADMIN</span> -->
      </a>
      <h1>BMSCE ADMIN</h1>
      <ul class="nav nav-pills">
        <!-- <li class="nav-item"><a href="#" class="nav-link active" aria-current="page">Home</a></li> -->
        <!-- <li class="nav-item"><a href="/adminleave" class="nav-link">Leave application</a></li>
        <li class="nav-item"><a href="/admincomplaints" class="nav-link">Compalint application</a></li>
        <li class="nav-item"><a href="/adminmesssuggestion" class="nav-link">Mess Suggestions</a></li>
        <li class="nav-item"><a href="/adminlatecoming" class="nav-link">Late coming application</a></li> -->
        <form method="post">
          <button type="submit" formaction="/admin/leaveapplications" class="nav-item nav-link submit-btn">Leave application</button>
          <button type="submit" formaction="/admin/complaints" class="nav-item nav-link submit-btn">Complaint application</button>
          <button type="submit" formaction="/admin/mess-suggestions" class="nav-item nav-link submit-btn active">Mess Suggestions</button>
          <button type="submit" formaction="/admin/latecoming" class="nav-item nav-link submit-btnn">Late coming application</button>
          <li class="nav-item nav-link submit-btn"><a href="../adminaddstudent" class="nav-item nav-link submit-btn">Add Student Details</a></li>
        </form>

      </ul>
    </header>

    <h1>Admin Mess Suggestions</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Student Email</th>
          <th>Day</th>
          <th>Meal</th>
          <th>Suggestions</th>
        </tr>
      </thead>
      <tbody id="suggestions-list">
        <!-- Mess Suggestions will be dynamically added here -->
      </tbody>
    </table>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script>
    // Fetch mess suggestions data from the backend
    axios.get('/admin/mess-suggestions')
      .then(response => {
        const suggestions = response.data;
        const suggestionsList = document.getElementById('suggestions-list');

        // Iterate over the mess suggestions array and add rows to the table
        suggestions.forEach(suggestion => {
          const row = document.createElement('tr');
          row.innerHTML = `
            <td>${suggestion.username}</td>
            <td>${suggestion.day}</td>
            <td>${suggestion.meal}</td>
            <td>${suggestion.suggestions}</td>
          `;
          suggestionsList.appendChild(row);
        });
      })
      .catch(error => {
        console.error(error);
      });
  </script>
</body>
